<br/>

<div class="booyah-box col-8 offset-2">
  <h1 class="text-center">Learn something today</h1>
  <hr/>

  <% @courses.each do |course| %>
  <h2 class="text-center"><%= link_to course.title, course_path(course) %></h2>
  <br/>
  <div class="col-10 offset-1">
    <%= image_tag course.image, class: 'img-fluid center-image' %>
  </div>
  <br/><br/>
  <div class="row">
    <div class="col-sm-8 col-12">
      <%= course.description %>
    </div>
    <div class="col-sm-4 col-12">
      <%= link_to 'More Details', course_path(course), class: 'btn btn-primary btn-large' %>
    </div>
  </div>
  <br>
  <hr class="col-8 offset-2">
  <br class="clr" />
  <% end %>
</div>